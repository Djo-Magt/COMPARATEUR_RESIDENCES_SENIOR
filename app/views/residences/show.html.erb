<% if @residence.photos.attached? %>
  <div class="map" style="background-image: url('<%= cl_image_path @residence.photos.last.key%>')"></div>
<% else %>
  <div class="map">Photo non dispo</div>
<% end %>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="residence-show-card">
        <h1><%= @residence.name %></h1>
        <p class="residence-show-address"><%= @residence.address %></p>
      </div>
      <div class="residence-show-card">
        <h3>Description...</h3>
        <p><%= @residence.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="residence-show-card">
        <h5>Reserver</h5>

        <form action="">
          <div class="input-group">
            <span class="input-group-text" id="start-date-label">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="start-date" aria-describedby="start-date-label">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-text" id="end-date-label">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="end-date" aria-describedby="start-date-label">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="residence-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @residence.number_of_guests %> personnes
          </div>
          <div class="flex ms-3">
            <%= @residence.price_per_night %>â‚¬
          </div>
        </div>
      </div>
      <div class="residence-show-card">
        <div class="flex-align">
          <div class="container" data-controller="insert-comment">
            <%= render "comments/form", residence: @residence, comment: @comment %>
            <div class="mt-3" data-insert-comment-target="comment_item">
              <% @comments.each do |comment| %>
                <%= render "comments/comment", residence: @residence, comment: comment %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
